{
  "npmClient": "yarn", 
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "version": "independent", 
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com"
    },
    "version": {
      "allowBranch": ["master", "stiches"], 
      "message": "chore(release): publicando vers√£o",
      "noCommitHooks": true,
      "ignoreChanges": ["yarn.lock"],
      "conventionalCommits": true
    }
  }
}